                    <Image Width="151" Source="unnamed.jpg" Height="153"/>
                </Border>
                <StackPanel Margin="20" VerticalAlignment="Center" Width="142">

                    <Label Content="Франко отримав Нобелівську&#xD;&#xA;премію" FontStyle="Italic" Margin="-34,0,0,20" Height="43" />
                    <Label Content="Франко знав понад 14 мов" FontStyle="Italic" Margin="-34,0,0,20" />
                    <Label Content="Написав близько 6000 творів" FontStyle="Italic" Margin="-34,0,0,20" />

                </StackPanel>

                <!-- his scores in vertical panel -->

            </StackPanel>
        </Border>

